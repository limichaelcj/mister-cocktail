<div class="info-card text-padding">
  <div class="row" style="display:flex;justify-content:center;">
    <div class="col-sm-8 col-sm-offset-">
      <h1>New Cocktail</h1>
      <hr>
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :image_url, label: "Image" %>
        <%= f.submit class: 'btn btn-primary', style: 'margin-top:30px;' %>
      <% end %>
    </div>
  </div>
</div>
